<!doctype html>
<html class="no-js">
  <head>
    <meta charset="utf-8">
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1, minimal-ui">
    <title>Iron Yard Sugar</title>


    <%= stylesheet_link_tag 'application', media: 'all' %>

    <%= javascript_include_tag 'application' %>

  </head>


  <body>

    <header>
      <p class="sweet-logo">Sugar</p>
      <div class="header-container">
        <div class="header-text-overlay">
          <div class="header-text">
            <h1>Durham, NC</h1>
            <h2>Summer 2014 Cohort</h2>
          </div>
      </div>
      </div>
    </header>

    <div class='container'>



      <!--
      // <script type="text/template" class="user-template">
      // Hello
      //            <%%- name %>
      //  </script>
      //
      //  <script type='text/x-handlebars-template' class="user-template2">
      //  Hello
      //             {{ name}}
      //   </script>
       -->


  <section class="login-container">
    <div id="login-splash">
      <h3>Sweet slogan goes here</h3>
    </div>
    <div id="login-form">
      <form name="login">
        <dt><p>Username</p><input class="form-entry" type="text" name="username"/></dt>
        <dt><p>Password</p><input class="form-entry" type="password" name="password"></dt>
        <a href="#/roster"><input id="login-button" type="button" value="Login"/></a>
        <input type="reset" id="reset" value="Cancel"/>
      </form>
    </div>
  </section>


<script id="do-me-template" type="text/x-handlebars-template">
  <nav>
    <ul>
      <li>Filter</li>
      <li>Edit My Profile</li>
    </ul>
  </nav>


  <section class="student-list">
    {{#each classRoster}}
      <div class="student-entry">

        <a href="#/">
          <img class="student-photo-small" src="{{avatar}}">
          <div class="student-name">{{name}}</div>
          <div class="course">{{course}}</div>
        </a>
      </div>
      {{/each}}

  </section>

</script>

<section id='student-single-template'>
  <nav>
    <ul>
      <li>Close</li>
      <li>Edit My Profile</li>
    </ul>
  </nav>
  <section class="student-page">
      <div class="student-entry">
        <a href="#/">
          <img class="student-photo-small" src="http://i.imgur.com/s7mpWGj.jpg">
          <div class="student-name">Dave Seidman</div>
          <div class="course">Rails</div>
        </a>
      </div>
  </section>




</div>

</body>
</html>
